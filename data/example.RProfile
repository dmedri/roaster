#
# RProfile:
# sys: /etc/Rprofile.site
# usr: .RProfile
#
local({
	# set default mirror
	r = getOption("repos")
	r["CRAN"] = "https://cloud.r-project.org")
	options(repos = r

	# set prompt
	options(prompt = "(RVE) R> ")

	# set number of digits
	options(digits = 4)

	# set signif.stars
	options(show.signif.starts = TRUE)

	# set default for strings
	options(stringAsFactors = TRUE)
})
